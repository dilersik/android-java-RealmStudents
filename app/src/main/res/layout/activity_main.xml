<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:text="@string/app_realm_students"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp">

        <Button
            android:id="@+id/bt_disciplines"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="callDisciplines"
            android:text="@string/disciplines"/>

        <Button
            android:id="@+id/bt_students"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="callStudents"
            android:text="@string/estudantes"/>

    </LinearLayout>
</FrameLayout>
